# Konversi Satuan Kaki, Satuan inci terhadapa sentimeter

print("\nProgram Konversi Satuan Tinggi Badan\n")
senti = float(input('Masukkan Ukuran Tinggi Badan (dalam cm) :'))
print("Tinggi Badan Kamu adalah :", senti, "cm")

# Satuan Kaki (ft)

feet = (0.0328084 * senti)
print("Dalam satuan kaki tinggi badan kamu adalah :", feet, "ft")

# Satuan Inci (inch)

inch = (0.393701 * senti)
print("Dalam satuan inci tinggi badan kamu adalah :", inch, "inch")
